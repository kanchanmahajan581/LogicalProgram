package com.string;

public class CountCV {
	
	public static void main(String[] args) {
		
		String s="Java is a";
		char[] arr=s.toCharArray();
		int cc=0;
		int cv=0;
		
		for(int i=0; i<arr.length; i++)
		{
			if(arr[i]!='a' && arr[i]!='e' && arr[i]!='i' && arr[i]!='o' && arr[i]!='u' && arr[i]!=' ')
			{
				System.out.println(arr[i]);
				cc++;
			}
			else
			{
				cv++;
			}
			
		}
		System.out.println("Count of Consonent "+ cc);
		System.out.println("Count Of Vowels "+cv);
		
	}

}
